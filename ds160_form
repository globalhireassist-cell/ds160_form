  </main>  <div id="toast" class="toast">Draft saved</div>  <script>
    // ==== CONFIGURE YOUR SUBMISSION ENDPOINT HERE ====
    // Option A: Formspree — create a form and replace the URL below with your unique endpoint
    // Example: const FORM_ENDPOINT = "https://formspree.io/f/xyzabcde";
    // Option B: Your own server — point to your API route that accepts multipart/form-data
    const FORM_ENDPOINT = "https://formspree.io/f/your-endpoint"; // <-- CHANGE THIS

    // Optional: Redirect after successful submit (leave blank to show success card)
    const SUCCESS_REDIRECT_URL = ""; // e.g., "https://yourdomain.com/thank-you"

    // ====== UTILITIES ======
    const form = document.getElementById('ds160Form');
    const toast = document.getElementById('toast');
    const resultCard = document.getElementById('result');
    const newEntryBtn = document.getElementById('newEntryBtn');

    function showToast(msg){
      toast.textContent = msg || 'Saved';
      toast.classList.add('show');
      setTimeout(()=> toast.classList.remove('show'), 2200);
    }

    function formToObject(formEl){
      const obj = {};
      const fd = new FormData(formEl);
      fd.forEach((val, key) => {
        if (obj[key] !== undefined) {
          // convert to array if multiple fields share same name
          if (!Array.isArray(obj[key])) obj[key] = [obj[key]];
          obj[key].push(val);
        } else {
          obj[key] = val;
        }
      });
      return obj;
    }

    // ====== DRAFT (localStorage) ======
    const STORAGE_KEY = 'ds160_draft_v1';

    function saveDraft(){
      const data = formToObject(form);
      // files cannot be stored in localStorage; ignore photo
      delete data.photo;
      localStorage.setItem(STORAGE_KEY, JSON.stringify(data));
      showToast('Draft saved');
    }

    function loadDraft(){
      const raw = localStorage.getItem(STORAGE_KEY);
      if (!raw) { showToast('No draft found'); return; }
      const data = JSON.parse(raw);
      for (const [k,v] of Object.entries(data)){
        const el = form.elements[k];
        if (!el) continue;
        if (el instanceof RadioNodeList || (NodeList.prototype.isPrototypeOf(el) && el.length)){
          // handle grouped fields if needed
          const first = form.querySelector(`[name="${k}"]`);
          if (first && first.tagName === 'SELECT') first.value = v;
        } else if (el) {
          el.value = v;
        }
      }
      showToast('Draft loaded');
    }

    function clearDraft(){
      localStorage.removeItem(STORAGE_KEY);
      showToast('Draft cleared');
    }

    document.getElementById('saveDraftBtn').addEventListener('click', saveDraft);
    document.getElementById('loadDraftBtn').addEventListener('click', loadDraft);
    document.getElementById('clearDraftBtn').addEventListener('click', clearDraft);

    // ====== SUBMISSION ======
    form.addEventListener('submit', async (e) => {
      e.preventDefault();

      if (!FORM_ENDPOINT || FORM_ENDPOINT.includes('your-endpoint')){
        alert('Please configure FORM_ENDPOINT in the code before submitting.');
        return;
      }

      const fd = new FormData(form);
      // Attach a JSON summary for convenience on the receiving side
      const summary = JSON.stringify(formToObject(form), null, 2);
      fd.append('summary_json', new Blob([summary], { type: 'application/json' }), 'summary.json');

      try {
        const res = await fetch(FORM_ENDPOINT, {
          method: 'POST',
          body: fd
        });

        if (!res.ok) throw new Error('Network response was not ok');

        // Clear draft on success
        cl
